
<div class="form-row">
  <div class="form-item">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>"> 
  </div>
  <div class="form-item">
    <label for="author">Author</label>
    <% if(authors.length > 0) {%>
    <select name="author" id="">
      <% authors.forEach(author=>{ %>
        <% if(author.id === book.id) {%>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
          <option  label="<%= author.name %>" value="<%= author.id %>">
          <%}%>
      <%})%>
    </select>
    <% } %>
  </div>
</div>

<div class="form-row">
  <div class="form-item"> 
    <label for="publishedDate">Publish Date</label>
    <input type="date" name="publishedDate" value="<%= book.publishDate !== null ? '' : book.publishedDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item"> 
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item no-grow">
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="book-cover filepond">
  </div>
  <div class="form-item">
    <label for="description">Description</label>
    <textarea  name="description"><%= book.description %></textarea>
  </div>
</div>
